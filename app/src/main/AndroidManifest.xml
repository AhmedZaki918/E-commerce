<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silkysys.umco">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.MainApplication"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UMCOAPP"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".ui.checkout.shipping.ShippingActivity"
            android:exported="false" />
        <activity
            android:name="com.silkysys.umco.ui.checkout.address.UpdateAddressActivity"
            android:exported="false" />
        <activity
            android:name="com.silkysys.umco.ui.checkout.address.UserAddressActivity"
            android:exported="false" />
        <activity
            android:name=".ui.checkout.summary.CheckoutActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name="com.silkysys.umco.ui.checkout.summary.OrderSummaryActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.checkout.payment.PaymentActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.checkout.delivery.DeliveryTimeActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name="com.silkysys.umco.ui.checkout.address.CreateAddressActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.profile.AccountSettingsActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.order.TrackOrderActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.order.MyOrdersActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.detail.SingleProductActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.explore.SelectCategoryActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.auth.ResetPasswordActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Home" />
        <activity
            android:name=".ui.main.SplashActivity"
            android:exported="true"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.WelcomeActivity"
            android:exported="true"
            android:screenOrientation="locked" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>